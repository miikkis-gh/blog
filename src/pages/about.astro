---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About';
const description = 'Software engineer writing about tech and side projects.';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
<div class="about-image">
      <img src="/assets/about-illustration.webp" alt="Illustration of a gear" width="330">
    </div>
    <p>Hi, I'm <strong>miikkis</strong>. Software engineer writing about tech and side projects.</p>
    <p>See my work on <a href="https://www.github.com/miikkis-gh" target="_blank" rel="noopener">GitHub</a> or visit <a href="https://miikkis.fi" target="_blank" rel="noopener">miikkis.fi</a>.</p>
  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
