---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About';
const description = 'Software engineer writing about tech and side projects.';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>About</h1>
    <figure class="about-image">
      <img src="/assets/about-illustration.webp" alt="Illustration of a notebook" width="330">
      <figcaption>
        Illustration by
        <a href="https://icons8.com/illustrations/author/5c07e68d82bcbc0092519bb6" target="_blank" rel="noopener">Icons 8</a>
        from
        <a href="https://icons8.com/illustrations" target="_blank" rel="noopener">Ouch!</a>
      </figcaption>
    </figure>
    <p>Hi, I'm <strong>miikkis</strong>. Software engineer writing about tech and side projects.</p>
    <p>See my work on <a href="https://www.github.com/miikkis-gh" target="_blank" rel="noopener">GitHub</a> or visit <a href="https://miikkis.fi" target="_blank" rel="noopener">miikkis.fi</a>.</p>
  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
